   <its:locNoteRule locNoteType="alert" selector="//msg">
    <its:locNote>The variable {0} has three possible values:
     'printer', 'copier' and 'scanner'.</its:locNote>
   </its:locNoteRule>
  </its:rules>
 </info>
 <body>
  <msg id="ON">The {0} has been enabled.</msg>
  <msg id="OFF">The {0} has been disabled.</msg>
  <msg id="BROKEN">The {0} is out of service.</msg>
 </body>
</myRes>
